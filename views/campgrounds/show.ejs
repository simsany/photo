<%- include("../partials/header.ejs") -%>

<div class="container">
	<div class="row">
		<div class="col-md-3">
			<h4> Menu</h4>
			<div class="list-group">
				<a href="/campgrounds" class="btn btn-dark">Back</a>
				<a href="/" class="btn btn-dark"> Home page </a>
			

			</div>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				<img class="img-responsive" src="<%=campground.source%>" width="100%" height="600px"><img>
				<div class="caption-full">
					<h4 class="float-right"><%=campground.price%>$ royalty (i'm joking)</h4>
					<p>Added by: <strong><%=campground.author.username%> </strong></p>

					<% if(currentUser&&campground.author.id.equals(currentUser.id)){%>

					<a href="/campgrounds/<%=campground.id%>/edit" class="btn btn-warning">Edit</a>
					<form id="delete" action="/campgrounds/<%=campground.id%>?_method=DELETE" method="POST">
						<button class="btn btn-danger">Delete</button>
					</form>
					<%}%>
					
					<h4><a href="#"> <%=campground.name%> </a></h4>
					<p><%=campground.description%></p>


				</div>


			</div>
			<div>
				<div class="text-right">
					<p><a class="btn btn-info" href="/campgrounds/<%=campground._id%>/comments/new">Add new comment</a>
					</p>


				</div>
				<hr>
				<%for(let i=campground.comments.length-1;i>=0;i--){%>

				<div class="row">
					<div class="col-md-12">
						<strong> <%=campground.comments[i].author%> </strong>
						<span class="float-right"> <% switch (true) {
case campground.comments[i].date-Date.now()<=-3600000: %>
							<%=parseInt(-((campground.comments[i].date-Date.now())/3600000))+" hours ago"%>
							<% break;

case campground.comments[i].date-Date.now()<=-60000: %>
							<%=parseInt(-((campground.comments[i].date-Date.now())/60000))+" mins ago"%>
							<% break;

case campground.comments[i].date-Date.now()>=-60000 : %>
							<%="few secons ago"%>
							<% break;

} %>



						</span>
						<p> <%=campground.comments[i].text%> </p>
						<% if(currentUser&&currentUser.username==campground.comments[i].author){%>
						<a class="btn btn-warning"
							href="/campgrounds/<%=campground.id%>/comments/<%=campground.comments[i].id%>/Edit">Edit</a>
						<form id="delete"
							action="/campgrounds/<%=campground._id%>/comments/<%=campground.comments[i].id%>?_method=DELETE"
							method="POST">
							<button class="btn btn-danger">Delete</button>
						</form>
						<hr>

					</div>








					<%}%>
		
				</div>
			</div>
			


<%}%>
				</div>
			</div>
		</div>
	</div>














	<%- include("../partials/footer.ejs") -%>