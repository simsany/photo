<%- include("../partials/header.ejs") -%>

<div class="container">



	<form class="col-lg-8" action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
		<h1 style="text-align:center"> Create </h1>
		<div class="form-group">
			<input class="form-control" type="text" name="campground[name]" value="<%=campground.name%>">
		</div>
		<div class="form-group">
			<input class="form-control" type="number" name="campground[price]"
				value="<%=campground.price%> placeholder=" Price" min="0.01" step="0.01">
		</div>
		<div class="form-group">
			<input class="form-control" type="text" name="campground[source]" value="<%=campground.source%>">
		</div>
		<div class="form-group">
			<input class="form-control" type="text" name="campground[description]" value="<%=campground.description%>">
		</div>

		<div class="form-group">
			<button class="btn btn-info btn-lg btn-block">Submit</button>
		</div>
		<div class="form-group">
			<button onclick="window.location.href='/campgrounds';" type="button" class="btn btn-dark btn-md">
				Back</button>
		</div>
	</form>


</div>



<%- include("../partials/footer.ejs") -%>