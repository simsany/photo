<%- include("../partials/header.ejs") -%>

<div class="container">



	<form class="col-lg-8" action="/photo/<%=campground._id%>/comments" method="POST">
		<h1 style="text-align:center"> Add new comment to <%=campground.name%> </h1>
		<div class="form-group">
			<input class="form-control" type="text" name="comment[text]" placeholder="text">
		</div>

		<div class="form-group">
			<input class="form-control" type="text" value="<%=currentUser.username%>" name="comment[author.username]"  readonly>
		</div>
<div class="form-group">
			<input class="form-control" type="text" value="<%=currentUser.id%>" name="comment[author.id]" style="display:none;"  readonly>
		</div>




		<div class="form-group">
			<button class="btn btn-info btn-lg btn-block">Submit</button>
		</div>
		<div class="form-group">
			<button onclick="window.location.href='/photo';" type="button" class="btn btn-dark btn-md">
				Back</button>
		</div>
	</form>


</div>



<%- include("../partials/footer.ejs") -%>